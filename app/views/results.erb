
<div class="container">
  <div class="survey_name">
    <h2><%= @survey.title %></h2>
    <h4>created by <%= @survey.creator.username %></h4>
  </div>
  <div class="results_table">
    <table>
      <%=question(@survey.id)%>
      <th>Option</th><th>Count</th>
      <% @results = choice_count(@survey.id) %>
      <% @results.keys.length.times do |i| %>
        <tr><td><%= key = @results.keys[i]%></td><td><%= @results[key] %></td></tr>
      <% end %>
    </table>
  </div>
</div>