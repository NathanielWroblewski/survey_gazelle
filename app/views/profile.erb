<div class="container">
  <div class="deets">
    <h1><%= current_user.username %></h1>
    <p><%= current_user.email %></p>
  </div>

  <div id="created" class="profile_surveys">
    <h3>Surveys I Created</h3>
    <ul>
      <% @created_surveys.each do |survey| %>
      <li><div class="survey_title"><%=survey.title%></div>
        <ul class="survey_links">
          <li><a href="/survey/<%=survey.id%>">View Survey</a></li>
          <li><a href="/survey/<%=survey.id%>/results">View Results</a></li>
        </ul>
        </li>
      <% end unless @created_surveys.nil? %>
    </ul>
  </div>

  <div id="voted" class="profile_surveys">
    <h3>Surveys I Voted On</h3>
    <ul>
      <% @voted_surveys.each do |survey| %>
      <li><div class="survey_title"><%=survey.title%></div>
        <ul class="survey_links">
          <li><a href="/survey/<%=survey.id%>">View Survey</a></li>
          <li><a href="/survey/<%=survey.id%>/results">View Results</a></li>
        </ul>
        </li>
      <% end unless @voted_surveys.nil? %>
    </ul>
  </div>

</div>
